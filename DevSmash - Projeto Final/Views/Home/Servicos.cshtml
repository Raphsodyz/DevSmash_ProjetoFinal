@model DevSmash___Projeto_Final.Models.ViewModels.ClientesViewModel
<link rel="stylesheet" href="~/css/EstiloServicos.css" asp-append-version="true" />


<section class="wrapper style1">
    <div class="container">
        <div class="row gtr-200">
            <div class="col-8 col-12-narrower">
                <div id="content">
                    <article>
                        <header>
                            <h1>Conheça nossos Serviços</h1>
                            <hr />
                            <br />
                            <p>Nossa equipe é totalmente qualificada e está pronta para te oferecer o melhor</p>
                        </header>
                        <br />
                        @foreach (var servico in Model.Servicos)
                        {
                            <header>
                                <h2 class="servico">@servico.Nome</h2>
                            </header>
                            <span class="image featured"><img src="@servico.Imagem" alt="" /></span>
                            <p>@servico.Descricao</p>
                        }
                    </article>
                </div>
            </div>
            <div class="col-4 col-12-narrower">
                <div id="sidebar">
                    <section>
                        <h3>
                            Precisa de alguma de nossas soluções? <br />
                            Nos envie uma mensagem!
                        </h3>
                        <footer>
                            @Html.Partial("_ClientesForm", Model.FalesConosco)
                            @if (TempData["Sucesso"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["Sucesso"]
                                </div>
                            }
                        </footer>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>     