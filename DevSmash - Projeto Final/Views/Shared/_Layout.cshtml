<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" , user-scalable=no />
    <title>@ViewData["Title"] - DevSmash</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="is-preload">
    <div id="page-wrapper">
        <header>
            <nav id="nav">
                <ul>
                    <li class="current">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Cronos</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Servicos">Servicos</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="About">Quem Somos</a>
                    </li>
                </ul>
            </nav>
        </header>
        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer>
            <div id="footer">
                <ul class="icons">
                    <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                    <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                    <li><a href="https://github.com/Raphsodyz" target="_blank" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
                    <li><a href="https://www.linkedin.com/in/arthur-vin%C3%ADcius-souza-ribeiro-7bbb07107/" target="_blank" class="icon brands fa-linkedin-in"><span class="label">LinkedIn</span></a></li>
                    <li><a asp-controller="AdmPanel" asp-action="Index" class="icon solid fa-toolbox"><span class="label">Administrador</span></a></li>
                </ul>
                <div class="copyright">
                    <ul class="menu">
                        <li>&copy; Devsmash. Todos os direitos reservados.</li>
                        <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js~/js/breakpoints.min.js" asp-append-version="true"></script>
    <script src="~/js~/js/browser.min.js" asp-append-version="true"></script>
    <script src="~/js~/js/jquery.dropotron.min.js" asp-append-version="true"></script>
    <script src="~/js~/js/main.js" asp-append-version="true"></script>
    <script src="~/js~/js/util.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
